# Database
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=edu_platform

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_BUCKET_NAME=edu-uploads

# Backend Security
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
ENVIRONMENT=development
LOG_LEVEL=INFO

# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_WEBHOOK_SECRET=YOUR_RANDOM_SECRET_STRING
TELEGRAM_WEBHOOK_URL=https://your-domain.com

# VK Bot (Long Poll - не требует внешнего URL)
VK_BOT_TOKEN=
VK_GROUP_ID=

# Redis (optional for production)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Backup Settings
# CRITICAL: Generate a valid 64-character hex key (32 bytes):
#   openssl rand -hex 32
# Example output: 7a3f8c2e1b9d4f6a0e5c8b7d2a1f9e3c4b6d8a0f2e7c1b5d9a3f6e8c0b4d7a2f
# WARNING: Key must contain ONLY 0-9 and a-f characters!
BACKUP_ENCRYPTION_KEY=
BACKUP_STORAGE_BUCKET=edu-backups
BACKUP_RETENTION_DAYS=30

# First Admin (your Telegram user ID)
FIRST_SUPERUSER_ID=YOUR_TELEGRAM_USER_ID
FIRST_SUPERUSER_USERNAME=admin

# Frontend URLs
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
NEXT_PUBLIC_BOT_URL=https://t.me/your_bot_username
